{% block content %}
    <h2>Users</h2>
    <p>
        <a class="btn btn-primary" href="{{ 'admin/users/create' | url }}">New Users</a>
    </p>
    <table class="table table-striped table-hover">
        <caption>Table Users</caption>
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Config</th>

        </tr>
        </thead>
        <tbody>

        {% for row in users  %}
            <tr>
                <td>{{row.name}}</td>
                <td>{{row.email}}</td>
                <td>
                    <a href="#">
                <span class="material-icons">
                                    build
                </span>
                    </a>
                    <a href="#">
                <span class="material-icons">
                                    delete
                </span>
                    </a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
{%  endblock %}
