{% extends "layout.twig" %}
{% block titleP %}
    Blog en PHP | Manage Users
{% endblock %}
{% block title %}
    Manage Posts
{% endblock %}
{% block content %}
    <h2>Users</h2>
    {%  if result %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Holy guacamole!</strong> your user save!!!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {%  endif %}
    <p>
        <a class="btn btn-primary" href="{{ 'admin/users/create' | url }}">New Users</a>
    </p>
    <table class="table table-striped table-hover">
        <caption>Table Users</caption>
        <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Config</th>

        </tr>
        </thead>
        <tbody>

        {% for row in users  %}
            <tr>
                <td>{{row.name}}</td>
                <td>{{row.email}}</td>
                <td>
                    <a href="{{ 'admin/users/edit/' | url }}{{ row.id }}">
                        <abbr title="EDITAR USUARIO">
                            <span class="material-icons">
                                    build
                            </span>
                        </abbr>
                    </a>
                    <a href="{{  'admin/users/delete/' | url }}{{ row.id }}">
                        <abbr title="ELIMINAR USUARIO">
                            <span class="material-icons">
                                    delete
                            </span>
                        </abbr>
                    </a>
                    {% if row.deleted_at != null %}
                    <a href="{{ 'admin/users/restore/' | url }}{{ row.id }}">
                        <abbr title="RESTAURAR POSTS">
                    <span class="material-icons">
                        restore
                    </span>
                        </abbr>
                    </a>
                    {% endif %}


                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
{%  endblock %}
{% block footer  %}
    <footer>
        This is a footer <br>
        <a class="btn btn-secondary" href="{{ 'admin' | url }}">Admin Panel</a>
    </footer>
{% endblock %}

